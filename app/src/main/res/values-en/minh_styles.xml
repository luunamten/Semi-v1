<resources>

    <!-- Base application theme. -->
    <style name="minh_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--Action bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>
    <style name="minh_SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/minh_splash_screen</item>
    </style>
    <style name="minh_commentRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/material_gray_300</item>
        <item name="colorControlActivated">@color/material_yellow_a300</item>
    </style>
</resources>
