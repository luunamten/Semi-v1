<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Splash theme-->
    <style name="SplashTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!--Store RecyclerView-->
    <style name="StoreRVTheme" parent="AppTheme" >
        <item name="android:background">@drawable/rv_item_click_selector</item>
    </style>
    <style name="StoreRVTheme.Rating">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StoreRVTheme.Title">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StoreRVTheme.Address">
        <item name="android:textColor">@color/colorAddress</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="StoreRVTheme.Cost">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--Nearby Store Label-->
    <style name="NearbyStoreLabel" parent="AppTheme">
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:elevation">1dp</item>
    </style>
    <!--Error Label-->
    <style name="ErrorLabel" parent="AppTheme">
        <item name="android:textColor">@color/colorTextError</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SearchTabTheme" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
